@import './../c_Theme/_index'

//=====MEDIA BREAKPOINTS =====//
    device_pixel_radio = 2;
    tablet_breakpoints = 890px;

.header
    background-image url('./../../resources/img/principal.png')
    background-size cover
    background-position center center
    background-attachment fixed
    width 100%
    height 340px
    @media screen and (min-width: tablet_breakpoints) 
        height 500px
.nav-center
    padding-top 60px
.top-nav
    position fixed
    top 0;
    
.nav-container
    position absolute
    transition all .45s
    top 60px;
    width 100%
    margin-left -600px
    background-color background_nav
    @media screen and (min-width: tablet_breakpoints) 
        background-color background_nav_optional
        width 34%;
.nav-items
    display block
    margin .5rem
    padding .7rem .35rem 
    border-bottom solid .5px #3D3D3D
    color color_nav
.size
    width 24px
    color teal