@import './../c_Theme/_index'

//=====MEDIA BREAKPOINTS =====//
    device_pixel_radio = 2;
    tablet_breakpoints = 890px;

.top-header
    background url('../../resources/img/principal.png')
    width 100%
    background-size cover
    background-position center center
    height 350px
    background-repeat no-repeat
    animation banner 50s 0s infinite
    @media screen and (min-width phone_breakpoints)
        height 600px


.movil-nav
    background-color rgba(0,0,0,0.5)
    display grid
    grid-template-columns 2.5fr 7.5fr
    grid-template-rows 56px
    @media screen and (min-width phone_breakpoints)
            display none
.toggle
    img
        @media screen and (min-width phone_breakpoints)
            display none
.flex 
    display flex
    justify-content center
    align-items center
    height 100%
    width 100%
    padding-top 6px

.title-content
    height 75%
    margin-right 25px

.list-container
    background-color #2A2A2A
    width 100%
    @media screen and (min-width phone_breakpoints)
        margin-top 0
        background: rgb(26,26,26);
        background: linear-gradient(180deg, rgba(26,26,26,0.6842087176667542) 3%, rgba(26,26,26,0.7346288857339811) 29%, rgba(26,26,26,0.49933476808692223) 76%, rgba(26,26,26,0) 100%);
        display grid
        grid-template-columns 2fr 6fr 2fr
        grid-template-rows 90px
        padding 10px 50px

.nav-items 
    display block
    border-bottom .5px solid #424343
    margin 0.5rem 1rem 
    padding .5rem
    font-size 1.1rem
    color grey
    transition all .25s ease
    &:hover
        color grey
        transform translateX(7px)
    &:hover .size
        color teal

    @media screen and (min-width phone_breakpoints)
        display inline-block
        border none
        font-weight 300
        text-shadow 0 0 15px rgba(0,0,0,5)
        color silver 
.list
    margin-top -600px
    transition all .5s ease
    color silver
    padding-top .25rem
    padding-bottom 2rem
    @media screen and (min-width phone_breakpoints)
        margin-top 0
        background-color transparent
        display flex
        padding 0 20px
        height 100%
        justify-content space-around
        align-items center
.logo
    display none
    @media screen and (min-width phone_breakpoints)
        display flex
        cursor pointer
        height 100%
        justify-content center
        align-items center
        &:before
            content url('../../resources/img/frame.svg')
            width 0
            opacity 0
            transition all .6s ease
            display block
        &:hover:before
            width 40px
            opacity 1
.logo-img
    height 90%
.size
    width 22px
    color #62BAC7

.toggle-check-btn:checked + .list
    margin-top 0 


.footer-main 
    height 60px
    width 100%
    margin 0
    background-color grey
    align-self flex-end
