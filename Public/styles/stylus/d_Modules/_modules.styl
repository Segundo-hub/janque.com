    device_pixel_radio = 2;
    tablet_breakpoints = 890px;

.icon-nav
	display inline-block 
	background #171717
	width 70px
	position absolute
	z-index 1
	height 60px
	top 0
	.item
		display block
		width 36px
		height 4px
		border-radius 1px
		margin 0 auto 4px
		position absolute
		transition all .35s
		background silver
		left 17px
	.top
		top 18px;
	.mid
		top 28px
	.bottom
		top 38px;
.logo
	display inline-block
	position absolute
	box-sizing border-box
	left 70px
	width 70px
	height 60px
	background-color rgba(#313131,.9)

.logo-img
	padding-top 5%
	width 100%
	height 90%

	

		
.description
	background-color rgba(#000,.4)
	border .5px solid #515151
	color silver
	text-align center
	width 80%
	margin 0 auto
	margin-top 200px
	padding 10px
	
.caption
	font-family "lato"
	font-size 1.4rem
	transition all .3s ease-in-out
	@media screen and (min-width: tablet_breakpoints)
		font-size 1.8rem
		&:hover
			cursor pointer
			font-size 2rem
			word-spacing 15px
			letter-spacing 4px
.loader
	position fixed
	left 0
	bottom 0
	right 0
	z-index 1200
	top 0
	background-color #2A2A2A
	.container
		height 100%
		display flex
		justify-content center
		align-items center
		
	i
		color #03627A;
		font-size 100px;
		animation loader-icon 1.5s infinite
		
@keyframes loader-icon 
	from 
		transform rotate(0deg)
	to
		transform rotate(360deg)
.none
	display none
.modal-img-view
	position fixed
	z-index 1000
	background-color rgba(#000,.6)
	padding 10px
	top 0
	left 0
	right 0
	bottom 0
	display flex
	justify-content center
	align-items center
	@media screen and (min-width: tablet_breakpoints)
		padding 16%
	img
		width 100%
	.btn
		display inline-block
		padding 10px
		border-radius 4px
		background-color rgba(#000,.5)
		position absolute
		top 15px
		right 15px
		color silver
		font-size 2rem
		cursor pointer